---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: nrf
  namespace: tenant3
  labels:
    app: nrf
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nrf
  template:
    metadata:
      labels:
        app: nrf
    spec:
      containers:
        - name: nrf
          image: ghcr.io/henricson/nrf:v0.0.32
          ports:
            - containerPort: 80
      imagePullSecrets:
        - name: github-actions
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: kubernetes.io/hostname
                    operator: In
                    values:
                      - "{{ tenant.node }}"
---
apiVersion: v1
kind: Service
metadata:
  name: nrf
  namespace: tenant3
spec:
  selector:
    app: nrf
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
