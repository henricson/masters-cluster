---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: udm
  namespace: tenant1
  labels:
    app: udm
spec:
  replicas: 1
  selector:
    matchLabels:
      app: udm
  template:
    metadata:
      labels:
        app: udm
    spec:
      containers:
        - name: udm
          image: ghcr.io/henricson/udm:v0.0.32
          ports:
            - containerPort: 80
      imagePullSecrets:
        - name: github-actions
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: kubernetes.io/hostname
                    operator: In
                    values:
                      - "{{ tenant.node }}"
---
apiVersion: v1
kind: Service
metadata:
  name: udm
  namespace: tenant2
spec:
  selector:
    app: udm
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
