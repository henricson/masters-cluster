---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: amf
  namespace: tenant2
  labels:
    app: amf
spec:
  replicas: 1
  selector:
    matchLabels:
      app: amf
  template:
    metadata:
      labels:
        app: amf
    spec:
      containers:
        - name: amf
          image: ghcr.io/henricson/amf:v0.0.32
          stdin: true
          tty: true
          ports:
            - containerPort: 80
      imagePullSecrets:
        - name: github-actions
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
              - matchExpressions:
                  - key: kubernetes.io/hostname
                    operator: In
                    values:
                      - "{{ tenant.node }}"
---
apiVersion: v1
kind: Service
metadata:
  name: amf
  namespace: tenant2
spec:
  selector:
    app: amf
  ports:
    - protocol: TCP
      port: 80
      targetPort: 80
